{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "paths": {
      "*": [
        "node_modules/*",
      ]
    },
    "baseUrl": "."
  },
  "include": ["./main.ts"],
}